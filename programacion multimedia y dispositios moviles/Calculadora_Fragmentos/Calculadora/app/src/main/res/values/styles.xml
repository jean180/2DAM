<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Botones" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="AppTheme.Botones.Orange" parent="AppTheme.Botones">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorOrange</item>
    </style>

    <style name="AppTheme.Botones.Grey1" parent="AppTheme.Botones">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/colorGrey1</item>
    </style>

    <style name="AppTheme.Botones.Grey2" parent="AppTheme.Botones">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorGrey2</item>
    </style>

</resources>